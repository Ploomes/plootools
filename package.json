{
  "name": "plootools",
  "displayName": "PlooTools",
  "description": "Create components and tests simply and intuitively.",
  "version": "0.0.4",
  "publisher": "UismaLopes",
  "icon": "img/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ploomes/plootools.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "author": {
    "name": "Uisma Lopes"
  },
  "license": "MIT",
  "engines": {
    "vscode": "^1.72.0"
  },
  "homepage": "https://github.com/Ploomes/plootools",
  "categories": [
    "Other"
  ],
  "keywords": [
    "ploomes",
    "CRM",
    "react",
    "jest",
    "tests",
    "component"
  ],
  "activationEvents": [
    "onCommand:plootools.menu",
    "onCommand:plootools.init",
    "workspaceContains:.plootools"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "plootools.menu",
        "title": "PlooTools"
      },
      {
        "command": "plootools.init",
        "title": "PlooTools init"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "group": "plootools",
          "title": "PlooTools",
          "command": "plootools.menu"
        },
        {
          "group": "plootools",
          "title": "PlooTools init",
          "command": "plootools.init"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./ && npm run copy:assets",
    "watch": "tsc -watch -p ./ && npm run copy:assets",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "copy:assets": "copyfiles -u 1 ./src/assets/**/* ./out"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/prettier": "^2.7.1",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "copyfiles": "^2.4.1",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "tsc-alias": "^1.8.2",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "fs": "0.0.1-security",
    "path": "^0.12.7",
    "prettier": "^2.7.1"
  }
}
