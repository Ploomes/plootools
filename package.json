{
  "name": "plootools",
  "displayName": "plootools",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:plootools.menu",
    "onCommand:plootools.createComponent",
    "onCommand:plootools.createTests"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "plootools.menu",
        "title": "Plootools"
      },
      {
        "command": "plootools.createComponent",
        "title": "Plootools create component"
      },
      {
        "command": "plootools.createTests",
        "title": "Plootools create tests"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "group": "plootools",
          "title": "Plootools",
          "command": "plootools.menu"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/prettier": "^2.7.1",
    "@types/vscode": "^1.72.0",
    "@typescript-eslint/eslint-plugin": "^5.31.0",
    "@typescript-eslint/parser": "^5.31.0",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.20.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.7.4"
  }
}
